<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:forms="clr-namespace:Xamarin.RangeSlider.Forms;assembly=Xamarin.RangeSlider.Forms" x:Class="Manifest.Views.WhatIsImportantToMePage">
    <ContentPage.Content>
<Grid x:Name="mainGridLayout" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="139"></RowDefinition>
                <RowDefinition x:Name="mainStackLayoutRow"  Height="*"></RowDefinition>
                <RowDefinition x:Name="settingStackLayoutRow" Height="0"></RowDefinition>
                <RowDefinition x:Name="barStackLayoutRow" Height="64"></RowDefinition>
                <RowDefinition x:Name="buttonStackLayoutRow" Height="0"></RowDefinition>
            </Grid.RowDefinitions>
            <Frame Grid.Row="0" BackgroundColor="#889AB5" x:Name="frameColor" CornerRadius="24" HeightRequest="155" Margin="0,-16,0,0">
                <!--SPACE FOR HEADER-->
                <Grid Margin="0,30,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="1"></RowDefinition>
                        <RowDefinition Height="20"></RowDefinition>
                        <RowDefinition Height="0"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="30"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="" TextColor="White"></Label>
                        <Label Grid.Column="1" Text="My Story" x:Name="title" TextColor="White" FontSize="36" FontAttributes="Bold" HorizontalTextAlignment="Center"></Label>
                        <ImageButton Grid.Column="2" Source="settingsIcon.png" Clicked="ImageButton_Clicked"  BackgroundColor="Transparent"></ImageButton>
                    </Grid>
                    <BoxView Grid.Row="1" HeightRequest="1" Color="White"></BoxView>
                    <Grid Grid.Row="2" Padding="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="Location" x:Name="locationTitle" TextColor="White" VerticalTextAlignment="Center" HeightRequest="20" FontAttributes="Bold" FontSize="14"></Label>
                        <Label Grid.Column="1" Text="Date" x:Name="dateTitle" TextColor="White"  VerticalTextAlignment="Center"  HeightRequest="20" HorizontalTextAlignment="End" FontAttributes="Bold"  FontSize="14"></Label>
                    </Grid>
                    <Grid Grid.Row="3">
                            <Label Padding="0,0,0,0" Text="Choose 2 goals to pursue today" x:Name="subTitle" TextColor="White" HorizontalTextAlignment="Center" FontSize="19" FontAttributes="Bold"></Label>
                    </Grid>
                </Grid>
            </Frame>
            <StackLayout Grid.Row="1" Padding="10,10,10,0" >
                <ScrollView>
                    <StackLayout>

                       <forms:RangeSlider
                            Grid.Row="2"
                            x:Name="rangeSliderAge"
                            StepValue="1"
                            StepValueContinuously="True"
                            TextSize="20"
                            ShowTextAboveThumbs="True" DragCompleted="rangeSliderAge_DragCompleted"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="Start Date" TextColor="Black" FontSize="12" FontAttributes="Bold"></Label>
                        <Label Grid.Column="1" Text="End Date" HorizontalTextAlignment="End" TextColor="Black" FontSize="12" FontAttributes="Bold"></Label>
                    </Grid>
                <Grid>
                    <Grid.RowDefinitions>
                         <RowDefinition Height="*"></RowDefinition>
                         <RowDefinition Height="*"></RowDefinition>
                         <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                <Frame Grid.Row="0" Margin="0,10,0,0" Padding="5,5,0,5" HeightRequest="159" BorderColor="Black" CornerRadius="10" HasShadow="False">
                    <StackLayout>
                        <Label Text="What is important you" TextColor="Black" FontSize="14" FontAttributes="Bold"></Label>
                        <StackLayout HeightRequest="150">
                            <CollectionView x:Name="ImportantList" ItemsLayout="HorizontalList">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout HeightRequest="150" WidthRequest="60">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="100"></RowDefinition>
                                                    <RowDefinition Height="50"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <StackLayout Rotation="180" Grid.Row="0" HeightRequest="70">
                                                    <BoxView HeightRequest="{Binding height}" Color="{Binding color}"  WidthRequest="10" HorizontalOptions="CenterAndExpand"></BoxView>
                                                </StackLayout>
                                                <StackLayout Grid.Row="1">
                                                    <Label Grid.Row="1" Text="{Binding name}" TextColor="Black" FontSize="12" HorizontalTextAlignment="Center" HeightRequest="20"></Label>
                                                </StackLayout>
                                            </Grid>
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                        <BoxView Margin="-1,-53,0,1" HeightRequest="1" Color="#889AB5"></BoxView>
                    </StackLayout>                    
                </Frame>

                <Frame Grid.Row="1" Margin="0,10,0,0" Padding="5,5,0,5" HeightRequest="159" BorderColor="Black" CornerRadius="10"  HasShadow="False">
                    <StackLayout>
                        <Label Text="What makes you happy" TextColor="Black" FontSize="14" FontAttributes="Bold"></Label>
                        <StackLayout HeightRequest="150">
                            <CollectionView x:Name="HappyList" ItemsLayout="HorizontalList">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout WidthRequest="60">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="100"></RowDefinition>
                                                    <RowDefinition Height="50"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <StackLayout Rotation="180" Grid.Row="0" HeightRequest="70">
                                                    <BoxView HeightRequest="{Binding height}" Color="{Binding color}"  WidthRequest="10" HorizontalOptions="CenterAndExpand"></BoxView>
                                                </StackLayout>
                                                <StackLayout Grid.Row="1">
                                                    <Label Grid.Row="1" Text="{Binding name}" TextColor="Black" FontSize="12" HorizontalTextAlignment="Center" HeightRequest="20"></Label>
                                                </StackLayout>
                                            </Grid>
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                        <BoxView Margin="-1,-53,0,1" HeightRequest="1" Color="#889AB5"></BoxView>
                    </StackLayout>                    
                </Frame>

                <Frame Grid.Row="2" Margin="0,10,0,0" Padding="5,5,0,5" HeightRequest="159" BorderColor="Black" CornerRadius="10"  HasShadow="False">
                    <StackLayout>
                        <Label Text="What motivates you" TextColor="Black" FontSize="14" FontAttributes="Bold"></Label>
                        <StackLayout HeightRequest="150">
                            <CollectionView x:Name="MotivationList" ItemsLayout="HorizontalList">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout WidthRequest="60">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="100"></RowDefinition>
                                                    <RowDefinition Height="50"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <StackLayout Rotation="180" Grid.Row="0" HeightRequest="70">
                                                    <BoxView HeightRequest="{Binding height}" Color="{Binding color}"  WidthRequest="10" HorizontalOptions="CenterAndExpand"></BoxView>
                                                </StackLayout>
                                                <StackLayout Grid.Row="1">
                                                    <Label Grid.Row="1" Text="{Binding name}" TextColor="Black" FontSize="12" HorizontalTextAlignment="Center" HeightRequest="20"></Label>
                                                </StackLayout>
                                            </Grid>
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                        <BoxView Margin="0,-53,0,1" HeightRequest="1" Color="#889AB5"></BoxView>
                    </StackLayout>                    
                </Frame>
                </Grid>

                        <Grid HeightRequest="60"  Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label WidthRequest="150" Grid.Column="0" Text="Goals" FontSize="12" FontAttributes="Bold"  VerticalTextAlignment="Center" HorizontalTextAlignment="Center" MaxLines="2" LineBreakMode="TailTruncation" TextColor="Black"></Label>
                            <CollectionView x:Name="DatesList" Grid.Column="1" ItemsLayout="HorizontalList" >
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout WidthRequest="28" Spacing="0">
                                            <Label Margin="0,15,0,0" Text="{Binding name}" WidthRequest="28" HorizontalTextAlignment="Center" ></Label>
                                            <!--<Label Text="{Binding date}" HorizontalTextAlignment="Center"></Label>-->
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>
                
              
                        <StackLayout Margin="10,-20,10,0">
                            <BoxView HeightRequest="1" Color="Gray" ></BoxView>
                        </StackLayout>
                       
                <CollectionView x:Name="GoalsStatusList" Margin="0,10,0,0" IsEnabled="False">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Margin="0,0,10,0" Orientation="Horizontal" Spacing="0">
                                <StackLayout WidthRequest="200">
                                    <Label Text="{Binding name}" Padding="10,0,0,0" HeightRequest="30" MaxLines="2" LineBreakMode="TailTruncation" WidthRequest="150"></Label>
                                </StackLayout>
                                <StackLayout WidthRequest="30" VerticalOptions="CenterAndExpand">
                                    <CheckBox HeightRequest="20" WidthRequest="20"
                                        Color="{Binding strokeColorA}"
                                        IsChecked="{Binding fillA}"
                                        IsEnabled="False">
                                    </CheckBox>
                                </StackLayout>

                                <StackLayout WidthRequest="30" VerticalOptions="CenterAndExpand">
                                    <CheckBox HeightRequest="20" WidthRequest="20"
                                        Color="{Binding strokeColorB}"
                                        IsChecked="{Binding fillB}"
                                        IsEnabled="False">
                                    </CheckBox>
                                </StackLayout>

                                <StackLayout WidthRequest="30" VerticalOptions="CenterAndExpand">
                                    <CheckBox HeightRequest="20" WidthRequest="20"
                                        Color="{Binding strokeColorC}"
                                        IsChecked="{Binding fillC}"
                                        IsEnabled="False">
                                    </CheckBox>
                                </StackLayout>

                                <StackLayout WidthRequest="30" VerticalOptions="CenterAndExpand">
                                    <CheckBox HeightRequest="20" WidthRequest="20"
                                        Color="{Binding strokeColorD}"
                                        IsChecked="{Binding fillD}"
                                        IsEnabled="False">
                                    </CheckBox>
                                </StackLayout>

                                <StackLayout WidthRequest="30" VerticalOptions="CenterAndExpand" >
                                    <CheckBox HeightRequest="20" WidthRequest="20"
                                        Color="{Binding strokeColorE}"
                                        IsChecked="{Binding fillE}"
                                        IsEnabled="False">
                                    </CheckBox>
                                </StackLayout>

                                <StackLayout WidthRequest="30" VerticalOptions="CenterAndExpand">
                                    <CheckBox HeightRequest="20" WidthRequest="20"
                                        Color="{Binding strokeColorF}"
                                        IsChecked="{Binding fillF}"
                                        IsEnabled="False">
                                    </CheckBox>
                                </StackLayout>

                                <StackLayout WidthRequest="30" VerticalOptions="CenterAndExpand">
                                    <CheckBox HeightRequest="20" WidthRequest="20"
                                        Color="{Binding strokeColorG}"
                                        IsChecked="{Binding fillG}"
                                        IsEnabled="False">
                                    </CheckBox>
                                </StackLayout>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                        <Grid HeightRequest="60"  Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label WidthRequest="150" Grid.Column="0" Text="Routines" FontSize="12" FontAttributes="Bold"  VerticalTextAlignment="Center" HorizontalTextAlignment="Center" MaxLines="2" LineBreakMode="TailTruncation" TextColor="Black"></Label>
                            <CollectionView Grid.Column="1" ItemsLayout="HorizontalList" >
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout WidthRequest="28" Spacing="0">
                                            <Label Margin="0,15,0,0" Text="{Binding name}" WidthRequest="28" HorizontalTextAlignment="Center" ></Label>
                                            <!--<Label Text="{Binding date}" HorizontalTextAlignment="Center"></Label>-->
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>
                
              
                        <StackLayout Margin="10,-20,10,0">
                            <BoxView HeightRequest="1" Color="Gray" ></BoxView>
                        </StackLayout>
                        <StackLayout>
                <CollectionView x:Name="RoutinesStatusList" Margin="0,10,0,0" IsEnabled="False" >
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Margin="0,0,10,0" Orientation="Horizontal" Spacing="0">
                                <StackLayout WidthRequest="200">
                                    <Label Text="{Binding name}" Padding="10,0,0,0" HeightRequest="30" MaxLines="2" LineBreakMode="TailTruncation" WidthRequest="150"></Label>
                                </StackLayout>
                                <StackLayout WidthRequest="30" VerticalOptions="CenterAndExpand">
                                    <CheckBox HeightRequest="20" WidthRequest="20"
                                        Color="{Binding strokeColorA}"
                                        IsChecked="{Binding fillA}"
                                        IsEnabled="False">
                                    </CheckBox>
                                </StackLayout>

                                <StackLayout WidthRequest="30" VerticalOptions="CenterAndExpand">
                                    <CheckBox HeightRequest="20" WidthRequest="20"
                                        Color="{Binding strokeColorB}"
                                        IsChecked="{Binding fillB}"
                                        IsEnabled="False">
                                    </CheckBox>
                                </StackLayout>

                                <StackLayout WidthRequest="30" VerticalOptions="CenterAndExpand">
                                    <CheckBox HeightRequest="20" WidthRequest="20"
                                        Color="{Binding strokeColorC}"
                                        IsChecked="{Binding fillC}"
                                        IsEnabled="False">
                                    </CheckBox>
                                </StackLayout>

                                <StackLayout WidthRequest="30" VerticalOptions="CenterAndExpand">
                                    <CheckBox HeightRequest="20" WidthRequest="20"
                                        Color="{Binding strokeColorD}"
                                        IsChecked="{Binding fillD}"
                                        IsEnabled="False">
                                    </CheckBox>
                                </StackLayout>

                                <StackLayout WidthRequest="30" VerticalOptions="CenterAndExpand" >
                                    <CheckBox HeightRequest="20" WidthRequest="20"
                                        Color="{Binding strokeColorE}"
                                        IsChecked="{Binding fillE}"
                                        IsEnabled="False">
                                    </CheckBox>
                                </StackLayout>

                                <StackLayout WidthRequest="30" VerticalOptions="CenterAndExpand">
                                    <CheckBox HeightRequest="20" WidthRequest="20"
                                        Color="{Binding strokeColorF}"
                                        IsChecked="{Binding fillF}"
                                        IsEnabled="False">
                                    </CheckBox>
                                </StackLayout>

                                <StackLayout WidthRequest="30" VerticalOptions="CenterAndExpand">
                                    <CheckBox HeightRequest="20" WidthRequest="20"
                                        Color="{Binding strokeColorG}"
                                        IsChecked="{Binding fillG}"
                                        IsEnabled="False">
                                    </CheckBox>
                                </StackLayout>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                            </StackLayout>

                <Grid Margin="5,0,0,0">
                    <StackLayout Grid.Column="0" HorizontalOptions="Center" >
                        <StackLayout WidthRequest="30" HorizontalOptions="Center">
                            <CheckBox x:Name="goalNotStarted" HeightRequest="20" WidthRequest="20"
                                IsEnabled="False">
                             </CheckBox>
                        </StackLayout>
                        <Label Text="Goals not started"></Label>
                    </StackLayout>
                    <StackLayout  Grid.Column="1" HorizontalOptions="Center" >
                        <StackLayout WidthRequest="30" HorizontalOptions="Center">
                        <CheckBox x:Name="goalStarted" HeightRequest="20" WidthRequest="20"
                            IsEnabled="False">
                        </CheckBox>
                        </StackLayout>
                        <Label Text="Goals started"></Label>
                    </StackLayout>
                    <StackLayout Grid.Column="2" >
                          <StackLayout WidthRequest="30" HorizontalOptions="Center">
                        <CheckBox x:Name="goalCompleted" HeightRequest="20" WidthRequest="20" 
                            IsEnabled="False"
                            IsChecked="True">
                        </CheckBox>
                              </StackLayout>
                        <Label Text="Goals completed"></Label>
                    </StackLayout>
                </Grid>

                    </StackLayout>
                </ScrollView>
            </StackLayout>

            <StackLayout Grid.Row="2">

            </StackLayout>
            <Grid Grid.Row="3" x:Name="barStackLayoutProperties" Padding="0" ColumnSpacing="0" Margin="0,0,0,-15" >
                <Frame Grid.Column="0" x:Name="scheduleFrame" BackgroundColor="#889AB5" CornerRadius="14" Padding="0,5,0,0" HasShadow="False" Opacity="0.5" >
                    <Grid>
                        <Image Grid.Row="0" Source="calendarIcon.png" HeightRequest="20"/>
                        <Label Grid.Row="1" Text="Schedule" HorizontalOptions="Center" TextColor="White" FontSize="12"/>
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" ></TapGestureRecognizer>
                    </Frame.GestureRecognizers>
                </Frame>
                <Frame Grid.Column="1" x:Name="lobbyFrame" BackgroundColor="#889AB5" CornerRadius="14" Padding="0,5,0,0" HasShadow="False" Opacity="0.5" >
                    <Grid>
                        <Image Grid.Row="0" Source="flowerIcon.png" HeightRequest="20"/>
                        <Label Grid.Row="1" Text="Lobby" HorizontalOptions="Center" TextColor="White" FontSize="12"/>
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_1" ></TapGestureRecognizer>
                    </Frame.GestureRecognizers>
                </Frame>
                <Frame Grid.Column="2" x:Name="supportFrame" BackgroundColor="#889AB5" CornerRadius="14" Padding="0,5,0,0" HasShadow="False" Opacity="0.5"  >
                    <Grid>
                        <Image Grid.Row="0" Source="helpIcon.png" HeightRequest="20"/>
                        <Label Grid.Row="1" Text="Support" HorizontalOptions="Center" TextColor="White" FontSize="12"/>
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_2" ></TapGestureRecognizer>
                    </Frame.GestureRecognizers>   
                </Frame>
            </Grid>
            <StackLayout Grid.Row="4" x:Name="buttonStackLayoutProperties"  Padding="0">
                <Button Text="Next" HorizontalOptions="Center" VerticalOptions="Center"></Button>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
