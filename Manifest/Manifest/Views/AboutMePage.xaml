<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Manifest.Views.AboutMePage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="150"></RowDefinition>
                <RowDefinition Height="70"></RowDefinition>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center">
                <Image x:Name="userImage" HeightRequest="80" WidthRequest="80"></Image>
                <Label x:Name="userName" Text="" TextColor="Black" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center"></Label>
                <Label x:Name="userID" Text="" TextColor="Black" FontSize="20"  HorizontalOptions="Center" VerticalOptions="Center"></Label>
                <Button HorizontalOptions="Center" VerticalOptions="Center" Text="Logout" HeightRequest="40" WidthRequest="100" Clicked="logUserOut" BackgroundColor="DarkGray"></Button>
            </StackLayout>
            <StackLayout Grid.Row="1">
                <CarouselView x:Name="myAdvisors" Margin="0,0,0,25" IndicatorView="indicatorView">
                    <!--<CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal"></LinearItemsLayout>
                    </CollectionView.ItemsLayout>-->
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Image Source="{Binding PicUrl}" VerticalOptions="Center" HeightRequest="80" WidthRequest="80"></Image>
                                <Label Text="{Binding Name}" VerticalOptions="Center" HorizontalOptions="Center"></Label>
                            </StackLayout>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
                <IndicatorView x:Name="indicatorView"
                IndicatorColor="LightGray"
                SelectedIndicatorColor="DarkGray"
                HorizontalOptions="Center" />
            </StackLayout>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="20"/>
                    </Grid.RowDefinitions>
                        <Image Grid.Row="0" Grid.Column="0" Source="listview.png" HeightRequest="20"/>
                        <Label Grid.Row="1" Grid.Column="0" Text="Today's List" HorizontalOptions="Center" TextColor="Black" FontSize="12"/>

                        <Image Grid.Row="0" Grid.Column="1" Source="aboutme.png" HeightRequest="20"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="About Me" HorizontalOptions="Center" TextColor="Black" FontSize="12"/>

                    <Button Grid.Column="0" Grid.RowSpan="2"  HorizontalOptions="Fill" VerticalOptions="Fill" Clicked="navigatetoTodaysList" BackgroundColor="Transparent"></Button>
                    <Button Grid.Column="1" Grid.RowSpan="2" HorizontalOptions="Fill" VerticalOptions="Fill"  Clicked="navigateToAboutMe" BackgroundColor="Transparent"></Button>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>
