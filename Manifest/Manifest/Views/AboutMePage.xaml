<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Manifest.Views.AboutMePage">
    <ContentPage.Content>
        <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0">
                    <Button Text="Logout" HeightRequest="40" WidthRequest="100" Clicked="logUserOut" BackgroundColor="DarkGray"></Button>
                </StackLayout>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Text="Button1" BackgroundColor="Red" Clicked="Button_Clicked_1"></Button>
                    <Button Grid.Column="1" Text="AboutMe" BackgroundColor="Green"></Button>
                </Grid>
            </Grid>
        <!--<Button Grid.Column="0" Text="Button1" BackgroundColor="Red" Clicked="Button_Clicked_1"></Button>
        <Button Grid.Column="1" Text="AboutMe" BackgroundColor="Green" Clicked="navigateToAboutMe"></Button>-->
    </ContentPage.Content>
</ContentPage>
