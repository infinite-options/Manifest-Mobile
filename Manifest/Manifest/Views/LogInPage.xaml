    <ContentPage.Content>

        <StackLayout Padding="0,100,0,0">
            <Ellipse
                StrokeThickness="0"
                Fill="#9DB2CB"
                WidthRequest="150"
                HeightRequest="150"
                HorizontalOptions="Center">
            </Ellipse>
            <StackLayout HorizontalOptions="Center" Margin="0,-110,0,0" HeightRequest="100" WidthRequest="150">
                <Label Text="Manifest your life" TextColor="White" FontSize="20" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HeightRequest="50"></Label>
            </StackLayout>
            <Grid HeightRequest="80" >
                <ImageButton
                    Grid.Row="0"
                    Grid.Column="0"
                    Source="facebook_login.png"
                    Padding="0,0,25,0"
                    BackgroundColor="Transparent"
                    Clicked="FacebookLogInClick">
                </ImageButton>
                <ImageButton
                    Grid.Row="0"
                    Grid.Column="1"
                    Source="google_login.png"
                    Padding="10,0,10,0"
                    BackgroundColor="Transparent"
                    Clicked="GoogleLogInClick">
                </ImageButton>
                <ImageButton
                    x:Name="appleLogInButton"
                    Grid.Row="0"
                    Grid.Column="2"
                    Source="apple_login.png"
                    Padding="25,0,0,0"
                    BackgroundColor="Transparent"
                    Clicked="AppleLogInClick"
                    Command = "{Binding SignInWithAppleCommand}">
                </ImageButton>
             </Grid>
        </StackLayout>

