                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"></TapGestureRecognizer>
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                    <StackLayout Grid.Row="6" ClassId="2">
                        <Image Source="mood_two.png" HeightRequest="90" WidthRequest="90" HorizontalOptions="Center"></Image>
                        <!--<Ellipse
                            Margin="0,0,20,0"
                            WidthRequest="75"
                            HeightRequest="75"
                            HorizontalOptions="Center"
                            Stroke="#FFBD27"
                            StrokeThickness="4">
                        </Ellipse>
                        <Label Text="2" TextColor="Black" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center"  Margin="0,-50,20,0"></Label>-->
