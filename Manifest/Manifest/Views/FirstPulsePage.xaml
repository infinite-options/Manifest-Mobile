                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                    <StackLayout Grid.Row="2" ClassId="5">
                        <Image Source="mood_five.png" HeightRequest="90" WidthRequest="90" HorizontalOptions="Start"></Image>
                        <!--<Ellipse
                            Margin="0,0,20,0"
                            WidthRequest="75"
                            HeightRequest="75"
                            HorizontalOptions="Start"
                            Stroke="#FFBD27"
                            StrokeThickness="4">
                        </Ellipse>
                        <Label Text="5" TextColor="Black" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Start"  Margin="30,-50,0,0"></Label>-->
