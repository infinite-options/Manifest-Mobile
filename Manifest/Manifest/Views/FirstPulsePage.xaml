                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"></TapGestureRecognizer>
                        </StackLayout.GestureRecognizers>
                       
                        
                    </StackLayout>
                    <StackLayout Grid.Row="1" ClassId="6">
                        <Image Source="mood_six.png" HeightRequest="90" WidthRequest="90" HorizontalOptions="Center"></Image>
                        <!--<Ellipse
                            Margin="0,0,20,0"
