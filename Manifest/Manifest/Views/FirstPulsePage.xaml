                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"></TapGestureRecognizer>
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                    <StackLayout Grid.Row="5" ClassId="3">
                        <Image Source="mood_three.png" HeightRequest="90" WidthRequest="90" HorizontalOptions="End"></Image>
                        <!--<Ellipse
                            Margin="0,0,20,0"
                            WidthRequest="75"
                            HeightRequest="75"
                            HorizontalOptions="End"
                            Stroke="#FFBD27"
                            StrokeThickness="4">
                        </Ellipse>
                        <Label Text="3" TextColor="Black" FontSize="Large" FontAttributes="Bold" HorizontalOptions="End" Padding="0,0,50,0" Margin="0,-50,0,0"></Label>-->
