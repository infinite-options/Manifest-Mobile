<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Manifest.Views.MainPage">
    <ContentPage.Content>
        <Grid x:Name="mainGridLayout" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="139"></RowDefinition>
                <RowDefinition x:Name="mainStackLayoutRow"  Height="*"></RowDefinition>
                <RowDefinition x:Name="settingStackLayoutRow" Height="0"></RowDefinition>
                <RowDefinition x:Name="barStackLayoutRow" Height="0"></RowDefinition>
                <RowDefinition x:Name="buttonStackLayoutRow" Height="0"></RowDefinition>
            </Grid.RowDefinitions>
            <Frame Grid.Row="0" BackgroundColor="#9DB2CD" x:Name="frameColor" CornerRadius="24" HeightRequest="155" Margin="0,-16,0,0">
                <!--SPACE FOR HEADER-->
                <Grid Margin="0,30,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="1"></RowDefinition>
                        <RowDefinition Height="20"></RowDefinition>
                        <RowDefinition Height="0"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="50"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="" TextColor="White"></Label>
                        <Label Grid.Column="1" Text="GOALS" x:Name="title" TextColor="White" FontSize="36" FontAttributes="Bold" HorizontalTextAlignment="Center"></Label>
                        <ImageButton Grid.Column="2" Source="settingsIcon.png" Clicked="Button_Clicked" BackgroundColor="Transparent"></ImageButton>
                    </Grid>
                    <BoxView Grid.Row="1" HeightRequest="1" Color="White"></BoxView>
                    <Grid Grid.Row="2" Padding="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="Location" x:Name="locationTitle" TextColor="White" VerticalTextAlignment="Center" HeightRequest="20" FontAttributes="Bold" FontSize="14"></Label>
                        <Label Grid.Column="1" Text="Date" x:Name="dateTitle" TextColor="White"  VerticalTextAlignment="Center"  HeightRequest="20" HorizontalTextAlignment="End" FontAttributes="Bold"  FontSize="14"></Label>
                    </Grid>
                    <Grid Grid.Row="3">
                            <Label Padding="0,0,0,0" Text="Choose 2 goals to pursue today" x:Name="subTitle" TextColor="White" HorizontalTextAlignment="Center" FontSize="19" FontAttributes="Bold"></Label>
                    </Grid>
                </Grid>
            </Frame>
            <StackLayout Grid.Row="1" Rotation="90">
               <Grid VerticalOptions="CenterAndExpand">
                   <Grid.RowDefinitions>
                       <RowDefinition Height="100"></RowDefinition>
                       <RowDefinition Height="150"></RowDefinition>
                       <RowDefinition Height="100"></RowDefinition>
                   </Grid.RowDefinitions>
                   <Grid Grid.Row="0">
                       <Grid.ColumnDefinitions>
                           <ColumnDefinition Width="*"></ColumnDefinition>
                           <ColumnDefinition Width="*"></ColumnDefinition>
                       </Grid.ColumnDefinitions>
                       <StackLayout Grid.Column="0">
                           <Ellipse
                                StrokeThickness="0"
                                Fill="#FFBD27"
                                Margin="0,0,20,0"
                                WidthRequest="100"
                                HeightRequest="100"
                                HorizontalOptions="End">
                           </Ellipse>
                           <StackLayout Rotation="-90"  HorizontalOptions="Start" Margin="75,-80,0,0" HeightRequest="50" WidthRequest="80">
                               <Label Text="Routines" TextColor="White" FontSize="16" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HeightRequest="50"></Label>
                               <StackLayout.GestureRecognizers>
                                   <TapGestureRecognizer Tapped="RoutinesClick" ></TapGestureRecognizer>
                               </StackLayout.GestureRecognizers>
                           </StackLayout>
                       </StackLayout>
                       <StackLayout Grid.Column="1">
                           <Ellipse
                                StrokeThickness="0"
                                Fill="#FFBD27"
                                Margin="20,0,0,0"
                                WidthRequest="100"
                                HeightRequest="100"
                                HorizontalOptions="Start">
                           </Ellipse>
                           <StackLayout Rotation="-90"  HorizontalOptions="Start" Margin="30,-80,0,0" HeightRequest="50" WidthRequest="80">
                               <Label Text="info" TextColor="White" FontSize="16" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HeightRequest="50"></Label>
                                <StackLayout.GestureRecognizers>
                                   <TapGestureRecognizer Tapped="InfoClick"></TapGestureRecognizer>
                               </StackLayout.GestureRecognizers>
                           </StackLayout>
                       </StackLayout>
                   </Grid>
                   <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="150"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                       <StackLayout Grid.Column="0" VerticalOptions="CenterAndExpand" Margin="0,-25,0,0">
                           <Ellipse
                                StrokeThickness="0"
                                Fill="#FFBD27"
                                WidthRequest="100"
                                HeightRequest="100"
                                HorizontalOptions="Start">
                           </Ellipse>
                            <StackLayout Rotation="-90"  HorizontalOptions="Start" Margin="10,-80,0,0" HeightRequest="50" WidthRequest="80">
                               <Label Text="Goals" TextColor="White" FontSize="16" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HeightRequest="50"></Label>
                               <StackLayout.GestureRecognizers>
                                   <TapGestureRecognizer Tapped="GoalsClick"></TapGestureRecognizer>
                               </StackLayout.GestureRecognizers>
                            </StackLayout>
                       </StackLayout>
                       <StackLayout  Grid.Column="1">
                            <Ellipse Grid.Column="1"
                                StrokeThickness="0"
                                Fill="#9DB2CB"
                                WidthRequest="150"
                                HeightRequest="150"
                                HorizontalOptions="End">
                            </Ellipse>
                            <StackLayout Rotation="-90" HorizontalOptions="Start" Margin="0,-110,0,0" HeightRequest="50" WidthRequest="150">
                               <Label x:Name="CenterCircle" Text="What are you currently doing?" TextColor="White" FontSize="20" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HeightRequest="50"></Label>
                               <StackLayout.GestureRecognizers>
                                   <TapGestureRecognizer Tapped="WhatAreYouCurrentlyDoingClick"></TapGestureRecognizer>
                               </StackLayout.GestureRecognizers>
                           </StackLayout>
                       </StackLayout>
                       <StackLayout Grid.Column="2" VerticalOptions="CenterAndExpand" Margin="0,-25,0,0">
                            <Ellipse
                                StrokeThickness="0"
                                Fill="#FFBD27"
                                WidthRequest="100"
                                HeightRequest="100"
                                HorizontalOptions="End">
                            </Ellipse>
                            <StackLayout Rotation="-90" HorizontalOptions="Start" Margin="15,-80,0,0" HeightRequest="50" WidthRequest="80">
                                <Label Text="Who am I?" TextColor="White" FontSize="16" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HeightRequest="50"></Label>
                                 <StackLayout.GestureRecognizers>
                                   <TapGestureRecognizer Tapped="WhoAmIClick"></TapGestureRecognizer>
                                </StackLayout.GestureRecognizers>
                            </StackLayout>
                       </StackLayout>
                   </Grid>
                   <Grid Grid.Row="2">
                       <Grid.ColumnDefinitions>
                           <ColumnDefinition Width="*"></ColumnDefinition>
                           <ColumnDefinition Width="*"></ColumnDefinition>
                       </Grid.ColumnDefinitions>
                       <StackLayout Grid.Column="0">
                           <Ellipse
                                StrokeThickness="0"
                                Fill="#FFBD27"
                                Margin="0,0,20,0"
                                WidthRequest="100"
                                HeightRequest="100"
                                HorizontalOptions="End">
                           </Ellipse>
                           <StackLayout Rotation="-90"  HorizontalOptions="Start" Margin="75,-80,0,0" HeightRequest="50" WidthRequest="80">
                               <Label Text="Note to future self" TextColor="White" FontSize="16" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HeightRequest="50"></Label>
                                <StackLayout.GestureRecognizers>
                                   <TapGestureRecognizer Tapped="NoteToFutureSelfClick"></TapGestureRecognizer>
                                </StackLayout.GestureRecognizers>
                           </StackLayout>
                       </StackLayout>
                       <StackLayout Grid.Column="1">
                           <Ellipse
                                StrokeThickness="0"
                                Fill="#FFBD27"
                                Margin="20,0,0,0"
                                WidthRequest="100"
                                HeightRequest="100"
                                HorizontalOptions="Start">
                           </Ellipse>
                           <StackLayout Rotation="-90"  HorizontalOptions="Start" Margin="30,-80,0,0" HeightRequest="50" WidthRequest="80">
                               <Label Text="Today's List" TextColor="White" FontSize="16" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HeightRequest="50"></Label>
                                <StackLayout.GestureRecognizers>
                                   <TapGestureRecognizer Tapped="TodayListClick"></TapGestureRecognizer>
                               </StackLayout.GestureRecognizers>
                           </StackLayout>
                       </StackLayout>
                   </Grid>
               </Grid>
            </StackLayout>
            <StackLayout Grid.Row="2">
                
            </StackLayout>
            <StackLayout Grid.Row="3" x:Name="barStackLayoutProperties">
                <Frame CornerRadius="15" Padding="0, 10, 0, 18" BackgroundColor="Transparent">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>
                            <Image Grid.Row="0" Grid.Column="0" Source="calendarIcon.png" HeightRequest="20"/>
                            <Label Grid.Row="1" Grid.Column="0" Text="Today's List" HorizontalOptions="Center" TextColor="White" FontSize="12"/>

                            <Image Grid.Row="0" Grid.Column="1" Source="personIcon.png" HeightRequest="20"/>
                            <Label Grid.Row="1" Grid.Column="1" Text="About Me" HorizontalOptions="Center" TextColor="White" FontSize="12"/>

                            <Image Grid.Row="0" Grid.Column="2" Source="helpIcon.png"   HeightRequest="20"/>
                            <Label Grid.Row="1" Grid.Column="2" Text="Get Help" HorizontalOptions="Center" TextColor="White" FontSize="12"/>

                        <Button Grid.Column="0" Grid.RowSpan="2"  HorizontalOptions="Fill" VerticalOptions="Fill" BackgroundColor="Transparent"></Button>
                        <Button Grid.Column="1" Grid.RowSpan="2" HorizontalOptions="Fill" VerticalOptions="Fill"  BackgroundColor="Transparent"></Button>
                        <Button Grid.Column="2" Grid.RowSpan="2" HorizontalOptions="Fill" VerticalOptions="Fill"  BackgroundColor="Transparent"></Button>
                    </Grid>
                </Frame>

            </StackLayout>
            <StackLayout Grid.Row="4" x:Name="buttonStackLayoutProperties"  Padding="0">
                <Button Text="Next" HorizontalOptions="Center" VerticalOptions="Center"></Button>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
