<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Manifest.Views.MainPage">
    <ContentPage.Content>
        <Grid x:Name="mainGridLayout" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="139"></RowDefinition>
                <RowDefinition x:Name="mainStackLayoutRow"  Height="*"></RowDefinition>
                <RowDefinition x:Name="settingStackLayoutRow" Height="0"></RowDefinition>
                <RowDefinition x:Name="barStackLayoutRow" Height="80"></RowDefinition>
                <RowDefinition x:Name="buttonStackLayoutRow" Height="0"></RowDefinition>
            </Grid.RowDefinitions>
            <Frame Grid.Row="0" BackgroundColor="#9DB2CD" x:Name="frameColor" CornerRadius="24" HeightRequest="155" Margin="0,-16,0,0">
                <!--SPACE FOR HEADER-->
                <Grid Margin="0,30,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="1"></RowDefinition>
                        <RowDefinition Height="20"></RowDefinition>
                        <RowDefinition Height="0"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="30"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="" TextColor="White"></Label>
                        <Label Grid.Column="1" Text="Manifest" x:Name="title" TextColor="White" FontSize="36" FontAttributes="Bold" HorizontalTextAlignment="Center"></Label>
                        <ImageButton Grid.Column="2" Source="settingsIcon.png" Clicked="Button_Clicked" BackgroundColor="Transparent"></ImageButton>
                    </Grid>
                    <BoxView Grid.Row="1" HeightRequest="1" Color="White"></BoxView>
                    <Grid Grid.Row="2" Padding="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Text="Location" x:Name="locationTitle" TextColor="White" VerticalTextAlignment="Center" HeightRequest="20" FontAttributes="Bold" FontSize="14"></Label>
                        <Label Grid.Column="1" Text="Date" x:Name="dateTitle" TextColor="White"  VerticalTextAlignment="Center"  HeightRequest="20" HorizontalTextAlignment="End" FontAttributes="Bold"  FontSize="14"></Label>
                    </Grid>
                    <Grid Grid.Row="3">
                            <Label Padding="0,0,0,0" Text="Choose 2 goals to pursue today" x:Name="subTitle" TextColor="White" HorizontalTextAlignment="Center" FontSize="19" FontAttributes="Bold"></Label>
                    </Grid>
                </Grid>
            </Frame>
            <StackLayout Grid.Row="1" >
                <Grid VerticalOptions="CenterAndExpand" HeightRequest="400">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="150"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackLayout Grid.Column="0" VerticalOptions="CenterAndExpand">
                        <StackLayout WidthRequest="150" Padding="5,0,0,10">
                            <RelativeLayout HorizontalOptions="CenterAndExpand">
                                <Ellipse
                                    StrokeThickness="0"
                                    Fill="#FFBD27"
                                    WidthRequest="100"
                                    HeightRequest="100">
                                </Ellipse>
                                <Label Padding="0,0,0,0" Text="Note to future self" TextColor="White" FontSize="16" FontAttributes="Bold"  HorizontalTextAlignment="Center" WidthRequest="100" HeightRequest="100" VerticalTextAlignment="Center"></Label>
                            </RelativeLayout>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="NoteToFutureSelfClick"></TapGestureRecognizer>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                        <StackLayout WidthRequest="150" Padding="5,10,0,0">
                            <RelativeLayout HorizontalOptions="CenterAndExpand">
                                
                                <Ellipse
                                    StrokeThickness="0"
                                    Fill="#FFBD27"
                                    WidthRequest="100"
                                    HeightRequest="100">
                                </Ellipse>
                                <Image Margin="0,15,0,0" Source="calendarIcon.png" HeightRequest="20" WidthRequest="100"></Image>
                                <Label Text="Today's List" TextColor="White" FontSize="16" FontAttributes="Bold"  HorizontalTextAlignment="Center" WidthRequest="100" HeightRequest="100" VerticalTextAlignment="Center"></Label>
                            </RelativeLayout>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TodayListClick"></TapGestureRecognizer>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout Grid.Column="1" WidthRequest="150" VerticalOptions="CenterAndExpand">
                        <StackLayout WidthRequest="150" Padding="0,0,0,15">
                            <RelativeLayout HorizontalOptions="CenterAndExpand">
                                <Ellipse
                                    StrokeThickness="0"
                                    Fill="#FFBD27"
                                    WidthRequest="100"
                                    HeightRequest="100">
                                </Ellipse>
                                <Label Padding="30,0,0,0" Text="Goals" TextColor="White" FontSize="16" FontAttributes="Bold"  HorizontalTextAlignment="Center" HeightRequest="100" VerticalTextAlignment="Center"></Label>
                            </RelativeLayout>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="GoalsClick"></TapGestureRecognizer>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                        <StackLayout HeightRequest="150" WidthRequest="150">
                            <RelativeLayout HorizontalOptions="CenterAndExpand">
                                <Ellipse
                                    StrokeThickness="0"
                                    Fill="#889AB5"
                                    WidthRequest="150"
                                    HeightRequest="150">
                                </Ellipse>
                                <Label Padding="0,0,0,0" Text="What are you currently doing?" HorizontalTextAlignment="Center" TextColor="White" FontSize="18" FontAttributes="Bold" HeightRequest="150" VerticalTextAlignment="Center"></Label>
                            </RelativeLayout>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="WhatAreYouCurrentlyDoingClick"></TapGestureRecognizer>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                        <StackLayout HeightRequest="100" WidthRequest="150" Padding="0,15,0,10">
                            <RelativeLayout HorizontalOptions="CenterAndExpand">
                                <Ellipse
                                    StrokeThickness="0"
                                    Fill="#FFBD27"
                                    WidthRequest="100"
                                    HeightRequest="100">
                                </Ellipse>
                                <Label Padding="12,0,0,0" Text="Who am I?" TextColor="White" FontSize="16" FontAttributes="Bold"  HorizontalTextAlignment="Center" HeightRequest="100" VerticalTextAlignment="Center"></Label>
                            </RelativeLayout>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="WhoAmIClick"></TapGestureRecognizer>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout Grid.Column="2" VerticalOptions="CenterAndExpand">
                        <StackLayout  WidthRequest="150" Padding="0,0,0,10">
                            <RelativeLayout HorizontalOptions="CenterAndExpand">
                                <Ellipse
                                    StrokeThickness="0"
                                    Fill="#FFBD27"
                                    WidthRequest="100"
                                    HeightRequest="100">
                                </Ellipse>
                                <Label Padding="17,0,0,0" Text="Routines" TextColor="White" FontSize="16" FontAttributes="Bold"  HorizontalTextAlignment="Center" HeightRequest="100" VerticalTextAlignment="Center"></Label>
                            </RelativeLayout>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="RoutinesClick" ></TapGestureRecognizer>
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                        <StackLayout WidthRequest="150" Padding="0,10,0,0">
                            <RelativeLayout HorizontalOptions="CenterAndExpand">
                                <Ellipse
                                    StrokeThickness="0"
                                    Fill="#FFBD27"
                                    WidthRequest="100"
                                    HeightRequest="100">
                                </Ellipse>
                                <!--<Image Margin="0,10,0,0" Source="questionIcon.png" HeightRequest="30" WidthRequest="100"></Image>-->
                                <Label Padding="45,10,0,0" Text="?" TextColor="White" FontSize="25" FontAttributes="Bold"  ></Label>
                                <Label Padding="35,0,0,0" Text="Info" TextColor="White" FontSize="16" FontAttributes="Bold"  HorizontalTextAlignment="Center" HeightRequest="100" VerticalTextAlignment="Center"></Label>
                            </RelativeLayout>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="InfoClick"></TapGestureRecognizer>
                            </StackLayout.GestureRecognizers>   
                        </StackLayout>
                    </StackLayout>
                </Grid>
            </StackLayout>
            <StackLayout Grid.Row="2">
               
            </StackLayout>
            <Grid Grid.Row="3" x:Name="barStackLayoutProperties" Padding="0" ColumnSpacing="0" Margin="0,0,0,-15" >
                <Frame Grid.Column="0" BackgroundColor="#889AB5" CornerRadius="14" Padding="0,5,0,0" HasShadow="False" Opacity="0.5" >
                    <Grid>
                        <Image Grid.Row="0" Source="calendarIcon.png" HeightRequest="20"/>
                        <Label Grid.Row="1" Text="Today's list" HorizontalOptions="Center" TextColor="White" FontSize="12"/>
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TodayListClick"></TapGestureRecognizer>
                    </Frame.GestureRecognizers>
                </Frame>
                <Frame Grid.Column="1" BackgroundColor="#889AB5" CornerRadius="14" Padding="0,5,0,0" HasShadow="True">
                    <Grid>
                        <Image Grid.Row="0" Source="flowerIcon.png" HeightRequest="20"/>
                        <Label Grid.Row="1" Text="Lobby" HorizontalOptions="Center" TextColor="White" FontSize="12"/>
                    </Grid>
                </Frame>
                <Frame Grid.Column="2" BackgroundColor="#889AB5" CornerRadius="14" Padding="0,5,0,0" HasShadow="False" Opacity="0.5"  >
                    <Grid>
                        <Image Grid.Row="0" Source="helpIcon.png" HeightRequest="20"/>
                        <Label Grid.Row="1" Text="Support" HorizontalOptions="Center" TextColor="White" FontSize="12"/>
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="InfoClick"></TapGestureRecognizer>
                    </Frame.GestureRecognizers>   
                </Frame>
            </Grid>
            <StackLayout Grid.Row="4" x:Name="buttonStackLayoutProperties"  Padding="0">
                <Button Text="Next" HorizontalOptions="Center" VerticalOptions="Center"></Button>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
