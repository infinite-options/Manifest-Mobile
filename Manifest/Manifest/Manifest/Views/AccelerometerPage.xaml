<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Manifest.Views.AccelerometerPage">
    <ContentPage.Content>
          <Grid>
    <StackLayout>
    <Label HorizontalTextAlignment="Center" Text="Accelerometer Values" Padding="0,50,0,0"/>
    <Label Text="Xvalue: " TextColor="Black"/>
    <Label  Grid.Row="0" Grid.ColumnSpan="2" x:Name="LabelX" TextColor="Black"/>
    <Label Text="Yvalue: " TextColor="Black"/>
    <Label  Grid.Row="1" Grid.ColumnSpan="2" x:Name="LabelY" TextColor="Black"/>
    <Label Text="Zvalue: " TextColor="Black"/>
    <Label  Grid.Row="2" Grid.ColumnSpan="2" x:Name="LabelZ" TextColor="Black"/>

    <Button Grid.Row="3" Grid.Column="0" Text="Start" x:Name="ButtonStart" Clicked="ButtonStart_Clicked" BorderWidth="2" BorderColor="Black" />
    <Button Grid.Row="3" Grid.Column="1" Text="Stop" x:Name="ButtonStop" Clicked="ButtonStop_Clicked" BorderWidth="2" BorderColor="Black"/>
    </StackLayout>
  </Grid>
    </ContentPage.Content>
</ContentPage>
